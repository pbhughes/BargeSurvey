                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => s.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => s.RiverCondition)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => s.Reading)
                        </td>
                    </tr>
                }
            </table>
            
