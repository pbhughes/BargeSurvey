@model BargeSurvey.Models.BargeSample


<div style="float:left; border:thin solid; margin:5px; padding:5px;">
   
    <div  data-mini="false" style="margin-right:5px;">

        <div class="ui-grid-b">

            <div class="ui-grid-solo">
                <h3>@Html.DisplayFor(model => model.BargeID)</h3>
            </div>

            <div class="ui-block-a">
                @Html.LabelFor(model => model.RiverCondition)
            </div>
            <div class="ui=block-b">
                <h2>@Html.DisplayFor(model => model.RiverCondition)</h2>
            </div>

            <div class="ui-block-a">
                @Html.LabelFor(model => model.BargeType)
            </div>
            <div class="ui=block-b">
                <h2>@Html.DisplayFor(model => model.BargeType)</h2>
            </div>

            <div class="ui-block-a">
                @Html.LabelFor(model => model.LoadedPrior)
            </div>
            <div class="ui=block-b">
                <h2>@Html.DisplayFor(model => model.LoadedPrior)</h2>
            </div>

            <div class="ui-block-a">
                @Html.LabelFor(model => model.PumpedAfterLight)
            </div>
            <div class="ui=block-b">
                <h2>@Html.DisplayFor(model => model.PumpedAfterLight)</h2>
            </div>
        </div>
        
        
        <div class="ui-grid-b">

            @foreach (var item in Model.Drafts.Where(d => d.DraftType == BargeSurvey.Models.DraftType.Light))
            {
                <div class="ui-block-a" data-mini="true">

                    <div class="ui-grid-solo">
                        <div class="portReading">@Html.DisplayFor(model => item.ReadingP1)</div>
                    </div>
                    <div class="ui-grid-solo">
                        <div class="portReading">@Html.DisplayFor(model => item.ReadingP2)</div>
                    </div>
                    <div class="ui-grid-solo">
                        <div class="portReading">@Html.DisplayFor(model => item.ReadingP3)</div>
                    </div>
                    <div class="ui-grid-solo">
                        <div class="portReading">@Html.DisplayFor(model => item.ReadingP4)</div>
                    </div>
                </div>

                <div class="ui-block-b" data-mini="true">
                    <div class="ui-grid-solo">
                        <div class="starboardReading">@Html.DisplayFor(model => item.ReadingS1)</div>
                    </div>
                    <div class="ui-grid-solo">
                        <div class="starboardReading">@Html.DisplayFor(model => item.ReadingS2)</div>
                    </div>
                    <div class="ui-grid-solo">
                        <div class="starboardReading">@Html.DisplayFor(model => item.ReadingS3)</div>
                    </div>
                    <div class="ui-grid-solo">
                        <div class="starboardReading">@Html.DisplayFor(model => item.ReadingS4)</div>
                    </div>

                </div>
            }

        </div>

        <div class="ui-grid-b">

            @foreach (var item in Model.Drafts.Where(d => d.DraftType == BargeSurvey.Models.DraftType.Heavy))
            {
                <div class="ui-block-a" data-mini="true">

                    <div class="ui-grid-solo">
                        <div class="portReading">@Html.DisplayFor(model => item.ReadingP1)</div>
                    </div>
                    <div class="ui-grid-solo">
                        <div class="portReading">@Html.DisplayFor(model => item.ReadingP2)</div>
                    </div>
                    <div class="ui-grid-solo">
                        <div class="portReading">@Html.DisplayFor(model => item.ReadingP3)</div>
                    </div>
                    <div class="ui-grid-solo">
                        <div class="portReading">@Html.DisplayFor(model => item.ReadingP4)</div>
                    </div>
                </div>

                <div class="ui-block-b" data-mini="true">
                    <div class="ui-grid-solo">
                        <div class="starboardReading">@Html.DisplayFor(model => item.ReadingS1)</div>
                    </div>
                    <div class="ui-grid-solo">
                        <div class="starboardReading">@Html.DisplayFor(model => item.ReadingS2)</div>
                    </div>
                    <div class="ui-grid-solo">
                        <div class="starboardReading">@Html.DisplayFor(model => item.ReadingS3)</div>
                    </div>
                    <div class="ui-grid-solo">
                        <div class="starboardReading">@Html.DisplayFor(model => item.ReadingS4)</div>
                    </div>

                </div>
            }


        </div>
    </div>
    <p>
        @Html.ActionLink("Edit", "Edit", "BargeSample", new { sampleID = Model.Id }, null) |
        @Html.ActionLink("Delete", "Delete", "BargeSample", new { id = Model.Id }, null)
    </p>
</div>