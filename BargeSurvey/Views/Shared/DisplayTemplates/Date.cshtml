@model Nullable<DateTime>

@using System.Globalization;

@{
    List<SelectListItem> days = new List<SelectListItem>();
    int numberOfDays = DateTime.DaysInMonth(DateTime.Now.Year, DateTime.Now.Month);
    for (int i = 1; i <= numberOfDays; i++)
    {
        days.Add(new SelectListItem() { Text = i.ToString(), Value = i.ToString(), Selected = (i == Model.Value.Day ? true : false) });
    }

    List<SelectListItem> months = new List<SelectListItem>();
    for (int i = 1; i <= 12; i++)
    {
        months.Add(new SelectListItem() { Text = i.ToString(), Value = i.ToString(), Selected = (i == Model.Value.Month ? true : false) });
    }

    List<SelectListItem> years = new List<SelectListItem>();

    int prevYearCount = 15;
    int nextYearCount = 15;

    for (int i = Model.Value.Year - prevYearCount; i <= Model.Value.Year + nextYearCount; i++)
    {
        years.Add(new SelectListItem() { Text = i.ToString(), Value = i.ToString(), Selected = (i == Model.Value.Year ? true : false) });
    }
}
<fieldset data-role="controlgroup" data-type="horizontal">
    @Html.DropDownList("months", months, htmlAttributes: new { data_min = true, data_inline = true, id = "dteMonth" })
    @Html.DropDownList("days", days, htmlAttributes: new { data_min = true, data_inline = true, id = "dteDay" })
    @Html.DropDownList("years", years, htmlAttributes: new { data_min = true, data_inline = true, id = "dteYear" })
</fieldset>